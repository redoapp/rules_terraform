load("@rules_javascript//commonjs:rules.bzl", "cjs_root")
load("@rules_javascript//javascript:rules.bzl", "js_library")
load("@rules_javascript//nodejs:rules.bzl", "nodejs_binary")
load("@rules_javascript//typescript:rules.bzl", "ts_library")

nodejs_binary(
    name = "bin",
    dep = ":lib",
    main = "lib/main.js",
    visibility = ["//visibility:public"],
)

ts_library(
    name = "lib",
    srcs = glob(["src/**/*.ts"]),
    config = "tsconfig.json",
    config_dep = ":tsconfig",
    declaration_prefix = "lib",
    js_prefix = "lib",
    root = ":root",
    strip_prefix = "src",
    deps = [
        "@npm//@cdktf/commons:lib",
        "@npm//@cdktf/provider-generator:lib",
        "@npm//@types/argparse:lib",
        "@npm//@types/node:lib",
        "@npm//argparse:lib",
        "@npm//codemaker:lib",
    ],
)

cjs_root(
    name = "root",
    package_name = "@rules-terraform/cdktf-gen",
    descriptors = ["package.json"],
)

js_library(
    name = "tsconfig",
    srcs = ["tsconfig.json"],
    root = ":root",
)
